<h1>Monsters</h1>
<grid columns=3 columns-s=1>
{% for slug in monsters %}
    {% set item = collections.lookup.monster[slug] %}
    <div class="card-wrap">
        <div class="card">
            <div class="card-bg" data-image="/assets/img/monster/{{ slug }}.jpg"></div>
            <div class="card-info">
                <h2><a href="{{ item.url | url }}">{{ item.data.title }}</a></h2>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
            </div>
        </div>
    </div>
{% endfor %}
</grid>

<h1>Weapons</h1>
<grid columns=3 columns-s=1>
    {% for item in [ 'Great Sword', 'Long Sword', 'Dual Blades', 'Sword and Shield', 'Hammer', 'Hunting Horn', 'Lance', 'Gunlance', 'Switch Axe', 'Charge Blade' ] %}
        <div class="card-wrap">
            <div class="card">
                <div class="card-bg" data-image="/assets/img/weapon-character-iceborne/{{ item | slug }}.jpg"></div>
                <div class="card-info">
                    <h2><a href="{{ ('/weapons/' ~ (item|slug)) | url }}">{{ item }}</a></h2>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                </div>
            </div>
        </div>
    {% endfor %}
</grid>

<h1>Weapons</h1>
<div>
    {% for item in weapons %}
        <img src="/assets/img/weapon-icon/{{ item | slug }}.png" height="40px" width="40px" style="display:inline-block; border: 1px solid black; padding: 5px;" />
    {% endfor %}
</div>



