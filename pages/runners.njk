---
layout: layouts/base.njk
title: Runners
---

<grid>
    <c>
        <h1>{{ title }}</h1>

        <ul class="compact">
            {% for item in collections.runners %}
                <li
                    {% if page.url == item.url %} class="active"{% endif %}>
                    <a href="{{ item.url | url }}">
                        {{- item.data.title -}}
                    </a>
                    {% if item.data.country %}
                        <span class="flag-icon flag-icon-{{ item.data.country }}"></span>
                    {% endif %}
                </li>
            {% endfor  %}
        </ul>
    </c>
</grid>
