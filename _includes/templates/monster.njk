---
layout: layouts/base.njk
---
{% set quests = collections.quests__by_monster[page.fileSlug] %}

<grid columns=12 columns-s=4>

<c span="row">
    <h1>{{ title }}</h1>
</c>
<c span=6>
    {{ content | safe }}
    <dl>
        <dt>Locations<dt>
        <dd>
            {% for item in collections.locations__by_monster[page.fileSlug] %}
                <a href="{{ item.url | url }}">{{- item.data.title -}}</a>
                {%- if not loop.last %}, {% endif %}
            {% endfor %}
        </dd>
    </dl>
</c>
<c span=6>
    {% if video %}
        {% include 'components/video.njk'%}
    {% endif %}
</c>

