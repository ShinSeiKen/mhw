<grid columns=12 columns-s=4>

<c span="row">
    <h1>{{ title }}</h1>
    {{ content | safe }}
</c>

<c span="row">

    <h2>Quests</h2>
    <ul class="compact">
        {% for item in collections.quests__by_location[ page.fileSlug ] %}
            <li>
                <a href="{{ item.url | url }}">{{ item.data.title }}</a>
            </li>
        {% endfor %}
    </ul>

