---
title: News
layout: layouts/base.njk
pagination:
    data: collections.news
    size: 1000
    alias: posts
    reverse: true
    # addAllPagesToCollections: true
# permalink: /news/{% if pagination.pageNumber > 0 %}page/{{ pagination.pageNumber + 1 }}/{% endif %}index.html
---

<h1>News</h1>
<ul>
    {% for post in posts %}
        <li>
            <a href="{{ post.url | url }}">
                {{- post.data.title -}}
            </a>
            <time datetime="{{ post.date | dateTimeISO }}" class="xxsmall">{{ post.date | dateDisplay }}</time>
            {#
            <article>
                <h2>
                    <a href="{{ post.url | url }}">
                        {{- post.data.title -}}
                    </a>
                </h2>
                <p>{{ post.data.teaser }}</P>
                <a href="{{ post.url | url }}">Read more<span class="visually-hidden"> about {{ post.data.title }}</span></a>
            </article>
            #}
        </li>
    {% endfor %}
</ul>
