---
title: Runners
---

<grid columns=12 columns-s=4>
    <c span="row">
        <h1>{{ title }}</h1>

        <ul class="runners-full-list compact">
            {% for runner in collections.runners %}
                <li>{% include "components/links/runner-link.njk" %}</li>
            {% endfor  %}
        </ul>
    </c>

    <hr>

    <c span=6>
        <h2>Weapon Masters</h2>
    </c>
    <c span=6>
    </c>


    {% for slug in global_weapons %}
        {% set item = collections.lookup.weapon[ slug ] %}
        <c span=4>
            <h3>{{ item.data.title }}</h3>
            <ul class="compact">
                {% for runner in collections.runners__by_weapon[ slug ] %}
                    {% if loop.index0 < 20 %}
                        <li>{% include "components/links/runner-link.njk" %}</li>
                    {% endif %}
                {% endfor %}
            </ul>
        </c>
    {% endfor %}

</grid>
