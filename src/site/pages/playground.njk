    <style>
        table, tr, td, th {
            border : 1px solid;
        }
        th {
            padding: 0.5em;
            vertical-align: bottom;
            text-align: center;
        }
        th img {
            width: 32px;
            height: 32px;
        }
        td img {
            width: 32px;
