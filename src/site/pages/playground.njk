    <h1>Leaderboards</h1>
    <table border="1">
        <tr>
            <th scope="col">Rank</th>
            <th scope="col">Runner</th>
            <th scope="col"><img src="/assets/img/achievement-small/miniature-crown-master.jpg" alt="Gold Trophy" /></th>
            <th scope="col"><img src="/assets/img/achievement-small/miniature-crown-collector.jpg" alt="Silver Trophy" /></th>
            <th scope="col"><img src="/assets/img/achievement-small/miniature-crown.jpg" alt="Bronze Trophy" /></th>
            <th scope="col">Total Trophies</th>
        </tr>
        {% for trophyCollection in collections.xxx %}
            {% set runner = trophyCollection.runner %}
            <tr>
                <td>
                    {% if loop.index == 1 %}
                        <img  src="/assets/img/achievement-small/giant-crown-master.jpg" alt="" />
                    {% elseif loop.index == 2 %}
                        <img src="/assets/img/achievement-small/giant-crown-collector.jpg" alt="" />
                    {% elseif loop.index == 3 %}
                        <img src="/assets/img/achievement-small/giant-crown.jpg" alt="" />
                    {% else %}
                        {{ loop.index }}
                    {% endif %}
                </td>
                <td scope="row">
                    <a href="{{ runner.url | url }}">{{- runner.data.title -}}</a>
                    {% if runner.data.country %}
                        <span class="flag-icon flag-icon-{{ runner.data.country }}"></span>
                    {% endif %}
                </td>
                <td>{{ trophyCollection.gold }}</td>
                <td>{{ trophyCollection.silver }}</td>
                <td>{{ trophyCollection.bronze }}</td>
                <td>{{ trophyCollection.gold + trophyCollection.silver + trophyCollection.bronze }}</td>
            </tr>
            <tr hidden>
                <td colspan=5>
                    {% for trophy in trophyCollection.trophies %}
                        {% set weaponSlug = trophy.run.data.weapons | first %}
                        {% set weapon = collections.lookup.weapon[ weaponSlug ] %}
                        <img src="/assets/img/achievement-small/miniature-crown-master.jpg" alt="" />
                        <a href="{{ trophy.run.url }}">
                            Rank <strong>{{ trophy.rank }}</strong> in <strong>{{ trophy.quest.data.title }}</strong> with <strong>{{ weapon.data.title }}</strong>.
                        </a>
                        {% if not loop.last %}
                            <br>
                        {% endif %}
                    {% endfor %}
                </td>
            </tr>
        {% endfor %}
    </table>

