<h1>Locations</h1>
<grid columns=3 columns-s=1>
{% for slug in locations %}
    {% set item = collections.lookup.location[slug] %}
    <div class="card-wrap">
        <div class="card">
            <div class="card-bg" data-image="/assets/img/location/{{ slug }}.webp"></div>
            <div class="card-info">
                <h2><a href="{{ item.url | url }}">{{ item.data.title }}</a></h2>
                <p class="h4"><span>Explore â†’</span></p>
            </div>
        </div>
    </div>
{% endfor %}
</grid>

<h1>Monsters</h1>
<grid columns=3 columns-s=1>
{% for slug in monsters %}
    {% set item = collections.lookup.monster[slug] %}
    <div class="card-wrap">
        <div class="card">
            <div class="card-bg" data-image="/assets/img/monster/{{ slug }}.jpg"></div>
            <div class="card-info">
                <h2><a href="{{ item.url | url }}">{{ item.data.title }}</a></h2>
                <p class="h4"><span>{{ item.data.species }}</span></p>
            </div>
        </div>
    </div>
{% endfor %}
</grid>

<h1>Weapons</h1>
<grid columns=3 columns-s=1>
    {% for slug in weapons %}
        {% set item = collections.lookup.weapon[ slug ] %}
        <div class="card-wrap">
            <div class="card">
                <div class="card-bg" data-image="/assets/img/weapon-character-iceborne/{{ slug }}.jpg"></div>
                <div class="card-info">
                    <h2><a href="{{ item.url | url }}">{{ item.data.title }}</a></h2>
                    <p class="h4"><span>{{ item.data.weapon_type }}</span></p>
                </div>
            </div>
        </div>
    {% endfor %}
</grid>

