---
layout: layouts/base.njk
title: Monsters
---

<grid>
    <c>
        <h1>{{ title }}</h1>
        <ul class="compact">
            {% for slug in monsters %}
                {% set item = collections.lookup.monster[slug] %}
                <li
                    {% if page.url == item.url %} class="active"{% endif %}>
                    <a href="{{ item.url | url }}">
                        {{- item.data.title -}}
                    </a>
                </li>
            {% endfor  %}
        </ul>
    </c>
</grid>
