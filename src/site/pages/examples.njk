    </div>

    <div>
        <label for="run__quest">Quest</label>
        <select id="run__quest" name="quest">
            {% for quest in collections.quests %}
                <option value="{{ quest.fileSlug }}">{{ quest.data.title }}</option>
            {% endfor %}
        </select>
    </div>

