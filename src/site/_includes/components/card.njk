{# Parameters:
    {{ card.image }}    - Path to image
    {{ card.url }}      - Link to page
    {{ card.title }}    - title
    {{ card.subtitle }} - subtitle
#}
<article class="card-wrap">
    <div class="card">
        <div class="card-bg" data-image="{{ card.image }}"></div>
        <div class="card-info">
            <h2><a href="{{ card.url | url }}">{{ card.title }}</a></h2>
            <p class="h4"><span>{{ card.subtitle }}</span></p>
        </div>
    </div>
</article>
