---
layout: layouts/base.njk
---
{% set quests = collections.quests__by_location[page.fileSlug] %}
{% set monsters = collections.monsters__by_location[page.fileSlug] %}

<grid columns=12 columns-s=4>

    <c span="row">
        <h1>{{ title }}</h1>
    </c>
    <c span=6>
        {{ content | safe }}
        <dl>
            {% if monsters | length %}
                <dt>Monsters<dt>
                <dd>
                    {% for item in monsters %}
                        <a href="{{ item.url | url }}">{{- item.data.title -}}</a>
                        {%- if not loop.last %}, {% endif %}
                    {% endfor %}
                </dd>
            {% endif %}
        </dl>

        {% if quests | length %}
            <h2>Quests</h2>
            <ul class="compact">
                {% for item in quests %}
                    <li>
                        <a href="{{ item.url | url }}">{{ item.data.title }}</a>
                    </li>
                {% endfor %}
            </ul>

            {#
            <h2>Runs</h2>
            <p>Showing runs by location is not that interesting</p>
            #}
        {% endif %}
    </c>
    <c span=6>
        {% if video %}
            {% include 'components/video.njk'%}
        {% endif %}
    </c>

</grid>
