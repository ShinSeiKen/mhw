---
layout: layouts/base.njk
---
{% import "components/macros.njk" as macros %}

{% set quests   = collections.quests__by_location[page.fileSlug] %}
{% set monsters = collections.monsters__by_location[page.fileSlug] %}

<div class="grid grid--location">
    <div class="grid__row">
        <h1>{{ title }}</h1>
    </div>
    <div class="grid__content">
        {{ content | safe }}
        <dl>
            {% if monsters | length %}
                <dt>Monsters<dt>
                <dd>
                    {% for item in monsters %}
                        <a href="{{ item.url | url }}">{{- item.data.title -}}</a>
                        {%- if not loop.last %}, {% endif %}
                    {% endfor %}
                </dd>
            {% endif %}
        </dl>

        {% if quests | length %}
            <h2>Quests</h2>
            <ul>
                {% for item in quests %}
                    <li>
                        <a href="{{ item.url | url }}">{{ item.data.title }}</a>
                    </li>
                {% endfor %}
            </ul>

            {#
            <h2>Runs</h2>
            <p>Showing runs by location is not that interesting</p>
            #}
        {% endif %}
    </div>
    <div class="grid__media">
        {% if video %}
            {{ macros.video(video) }}
        {% endif %}
    </div>
</div>
